// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./**/*.ts"
  ]
}
